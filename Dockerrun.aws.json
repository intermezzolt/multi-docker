{
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions": [{
			"name": "client",
			"image": "mmiskinis/multi-client",
			"hostname": "client",
			"essential": false
		},

		{
			"name": "server",
			"image": "mmiskinis/multi-server",
			"hostname": "api",
			"essential": false
		},

		{
			"name": "worker",
			"image": "mmiskinis/multi-worker",
			"hostname": "worker",
			"essential": false
		},

		{
			"name": "nginx",
			"image": "mmiskinis/multi-nginx",
			"essential": true,
			"portMappings": [{
					"hostPort": 80,
					"containerPort": 80

				}

			],
			"links": ["client", "server"]
		}
	]
}
